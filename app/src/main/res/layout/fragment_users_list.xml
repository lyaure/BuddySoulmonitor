<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".UsersListFragment">

    <RadioGroup
        android:id="@+id/userStatusRadioGroup_ID"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/confirmedUserBtn_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:shadowColor="@color/colorGreen"
            android:text="Confirmed" />

        <RadioButton
            android:id="@+id/notConfirmedUserBtn_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Not confirmed" />

    </RadioGroup>

    <ListView
        android:id="@+id/userList_ID"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp" />

</LinearLayout>