<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userStatDate_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Date:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userStatSteps_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Steps:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userStatStepGoal_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Step Goal:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userStatAsleep_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Asleep:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userStatWokeUp_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Woke up:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userStatDeepSleep_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Deep sleep:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userStatSleepGoal_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Sleep Goal:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userStatMorningLocation_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Morning location:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userStatNightLocation_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Night location:"
        android:textSize="18sp" />

</LinearLayout>