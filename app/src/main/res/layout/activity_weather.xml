            <TextView
                android:id="@+id/dForecast5_ID"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="25°"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>