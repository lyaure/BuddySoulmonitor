<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/colorBlue"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Change your step goal"
            android:textColor="@color/colorBlue"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/goalTxtv_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Enter your goal here"
            android:inputType="none|numberDecimal"
            android:textColorLink="@color/colorGreen" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Change tempertaure unit"
            android:textColor="@color/colorBlue"
            android:textColorLink="@color/colorOrange"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/radioGroupTemp_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonF_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="°F"
                android:textColorHighlight="@color/colorGreen"
                android:textColorLink="@color/colorGreen" />

            <RadioButton
                android:id="@+id/radioButtonC_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="°C"
                android:textColorHighlight="@color/colorGreen"
                android:textColorLink="@color/colorGreen" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/applyBtn_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="apply"
        android:textColorHighlight="@color/colorOrange"
        android:textColorLink="@color/colorOrange" />

</LinearLayout>