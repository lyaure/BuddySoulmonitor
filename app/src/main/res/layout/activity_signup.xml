<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/icon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/textview_border"
                android:drawableStart="@drawable/ic_user_gray_24dp"
                android:ems="10"
                android:hint="First name *"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textColorHint="@color/colorBlack" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/textview_border"
                android:drawableStart="@drawable/ic_user_gray_24dp"
                android:ems="10"
                android:hint="Last name"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textColorHint="@color/colorBlack" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/textview_border"
                android:drawableStart="@drawable/ic_email_gray_24dp"
                android:ems="10"
                android:hint="Email *"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textColorHint="@color/colorBlack" />

            <EditText
                android:id="@+id/txtv_password2_ID"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/textview_border"
                android:drawableStart="@drawable/ic_lock_gray_24dp"
                android:drawableRight="@drawable/ic_eye_gray_24dp"
                android:ems="10"
                android:hint="Password *"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:textColorHint="@color/colorBlack" />

            <EditText
                android:id="@+id/txtv_confirm_ID"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/textview_border"
                android:drawableStart="@drawable/ic_lock_gray_24dp"
                android:drawableRight="@drawable/ic_eye_gray_24dp"
                android:ems="10"
                android:hint="Confirm password *"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:textColorHint="@color/colorBlack" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I agree to Buddy&amp;Soul's Privacy Policy and Term of Use and confirm I am over 13 of age."
                android:textColorLink="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:text="Button"
                    android:textColor="@color/colorWhite" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>